<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MSL4_Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MSL4_Mobile"
    xmlns:views="clr-namespace:MSL4_Mobile.Views"
    xmlns:services="clr-namespace:MSL4_Mobile.Services"
    Shell.FlyoutBehavior="Disabled"
    x:Name="shell">

    <TabBar BindingContext="{x:Reference shell}">

        <Tab Title="Login" IsVisible="{Binding showLoginTab}">
            <ShellContent
                Title="Webmonitor Login"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="mainView"
                />
        </Tab>

        <Tab Title="Verbindung" IsVisible="{Binding showConnectionTab}">

            <ShellContent
                Title="Verbindung"
                ContentTemplate="{DataTemplate views:Connection.ConnectionView}" Route="connection" />

        </Tab>

        <Tab Title="Info" IsVisible="{Binding showNav}">


            <ShellContent
                Title="MSL4"
                ContentTemplate="{DataTemplate views:Home.HomeView}" Route="infoView"/>

            <ShellContent
                Title="Status"
                ContentTemplate="{DataTemplate views:Status.StatusView}" />

            <ShellContent
                Title="Visual"
                ContentTemplate="{DataTemplate views:Visual.VisualView}" />

        </Tab>

        <Tab Title="Kanäle" IsVisible="{Binding showNav}">
            <ShellContent
                Title="Digital"
                ContentTemplate="{DataTemplate views:DigitalView}" />

            <ShellContent
                Title="Analog"
                ContentTemplate="{DataTemplate views:AnalogView}" />

            <ShellContent
                Title="GPIO"
                ContentTemplate="{DataTemplate views:GPIO.GPIOView}" />

            <ShellContent
                Title="Zähler"
                ContentTemplate="{DataTemplate views:Meter.MeterView}" />

        </Tab>

        <Tab Title="Geräte" IsVisible="{Binding showNav}">
            <ShellContent
                Title="MBus"
                ContentTemplate="{DataTemplate views:MBus.MBusView}" />

            <ShellContent
                Title="Modbus"
                ContentTemplate="{DataTemplate views:Modbus.ModbusView}" />

        </Tab>




    </TabBar>

</Shell>

