<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:services="clr-namespace:MSL4_Mobile.Services"
             xmlns:analog="clr-namespace:MSL4_Mobile.Views.Analog"
             x:Class="MSL4_Mobile.Views.Analog.AnalogDetailsView"
             x:Name="page"
             Title="AnalogDetailsView">

    <Grid BindingContext="{x:Reference page}" RowSpacing="10" Margin="0,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <HorizontalStackLayout Grid.ColumnSpan="2" HeightRequest="30" HorizontalOptions="Center">
            <Label Text="Analoger Eingang " FontSize="24"/>
            <Label Text="{Binding analogInput.pName}" Grid.Column="1" FontSize="24" />
        </HorizontalStackLayout>

        <Label Text="Zustand" Grid.Row="1" />
        <HorizontalStackLayout Grid.Row="1" Grid.Column="1">
            <Label Text="{Binding analogInput.pValue}" />
            <Label Text="{Binding analogInput.pUnit}" />
            <Label Text="{Binding Units[0]}" />
        </HorizontalStackLayout>
    </Grid>
</ContentPage>
